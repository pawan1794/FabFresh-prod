container_commands:
  01_migrate:
    command: "django-admin.py migrate"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python FabFresh/manage.py createsu"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "FabFresh.settings"
    PYTHONPATH: "/opt/python/current/app/FabFresh:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "FabFresh/wsgi.py"
    "StaticFiles": "/static/=static/"
  "aws:elasticbeanstalk:container:python:staticfiles":
   "/static/": "static/"
